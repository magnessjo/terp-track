{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "source",
    "sourceMap": true,
    "types": ["vite/client"]
  },
  "include": ["source/**/*.ts"]
}
